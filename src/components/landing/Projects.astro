const sortedProjects = projects.sort(
  (a, b) => parseInt(b.year) - parseInt(a.year)
);
---

<section>
  <Wrapper variant="base">
    <Text
      tag="h3"
      variant="textBase"
      class="font-semibold text-zinc-900 dark:text-zinc-200"
    >
      Projects
    </Text>
    {
      sortedProjects.map((project) => (
        <div class="grid grid-cols-1 mt-12 gap-4 md:grid-cols-2 lg:grid-cols-5">
          {/* Year */}
          <Text tag="span" variant="textSM" class="font-medium text-zinc-500">
            {project.year}
          </Text>

          {/* Project Content */}
          <div class="lg:col-span-4">
            <a href={project.link}>
              <Text
                tag="h4"
                variant="textBase"
                class="font-semibold text-zinc-900 dark:text-zinc-200  flex justify-between w-full"
              >
                {project.title} ↗
              </Text>
            </a>
            <Text
              tag="p"
              variant="textSM"
              class="text-zinc-600 dark:text-zinc-400 font-semibold mt-2"
            >
              {project.technology}
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="text-zinc-600 dark:text-zinc-500  mt-2"
            >
              {project.description}
            </Text>

            {/* Images */}
            <div class="flex flex-wrap gap-2 mt-4">
              {project.images.map((image, index) => (
                <Image
                  src={image.src}
                  alt={image.alt}
                  width="1000"
                  height="1000"
                  class="w-32 shadow rounded object-cover"
                />
              ))}
            </div>
          </div>
        </div>
      ))
    }
  </Wrapper>
</section>
