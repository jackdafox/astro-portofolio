---
// Images
import { Image } from "astro:assets";
import Avatar from "@/images/avatar.jpg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const links = [
  {
    label: "Instagram",
    url: "https://www.instagram.com/",
    text: "@dzxky_",
  },
  {
    label: "LinkedIn",
    url: "https://www.linkedin.com/in/muhammad-dzaky-892351220",
    text: "Muhammad Dzaky",
  },
  {
    label: "GitHub",
    url: "https://github.com/jackdafox",
    text: "@jackdafox",
  },
];
---

<section>
  <Wrapper variant="base" class="lg:pt-24">
    <div class="flex items-center space-x-4">
      <Image
        src={Avatar}
        alt="avatar"
        width="1000"
        height="1000"
        class="size-24 rounded-full object-cover ring ring-zinc-200 dark:ring-zinc-800 saturate-0"
      />
      <div>
        <Text
          tag="h1"
          variant="textBase"
          class="font-semibold text-zinc-900 dark:text-zinc-200"
          >Muhammad Dzaky</Text
        >
        <Text
          tag="p"
          variant="textSM"
          class="text-sm text-zinc-600 dark:text-zinc-400"
          >Multimedia Student @ Universiti Malaya</Text
        >
        <div class="mt-2 flex">
          <a
            href="https://g8p7b7sjok.ufs.sh/f/Zqh06b1WVmYEwARwgryI6VXDH93GYvly8CNuag2pr1iqbAmt"
            class="bg-zinc-100 dark:bg-zinc-900 text-zinc-900 dark:text-zinc-200 dark:text-white text-xs h-6 items-center flex rounded-full px-3"
            >Muhammad Dzaky's CV ↗</a
          >
        </div>
      </div>
    </div>

    <div class="mt-8">
      <Text
        tag="h2"
        variant="textSM"
        class="font-medium text-zinc-900 dark:text-zinc-200">About</Text
      >
      <Text tag="p" variant="textSM" class="text-zinc-500 mt-4">
        I’m a self-taught front-end developer and UI designer with a strong
        passion for building my own projects. My philosophy revolves around
        simplicity and practicality, focusing on straightforward principles that
        deliver results. I value sticking to a clear plan and executing it
        reliably, with consistency being the foundation that keeps everything on
        track.
      </Text>
    </div>

    <div class="mt-12">
      <Text
        tag="h2"
        variant="textSM"
        class="font-semibold text-zinc-900 dark:text-zinc-200">Contact</Text
      >
      <div class="mt-8">
        <ul class="lg:col-span-4">
          {
            links.map((link) => (
              <li class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 mb-5 lg:mb-0">
                <Text
                  tag="span"
                  variant="textSM"
                  class=" font-medium text-zinc-900 dark:text-zinc-200"
                >
                  {link.label}
                </Text>
                <Text
                  tag="a"
                  variant="textSM"
                  href={link.url}
                  class=" text-zinc-500 hover:underline lg:col-span-4"
                >
                  {link.text}
                </Text>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Wrapper>
</section>
